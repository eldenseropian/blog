body
  background #F8F0DA 
  color #5C2E00
  font-family sans, sans-serif 
  font-size 1em
  text-align center
h1, h2
  color #5C2E00
  margin 0
h1
  font-size 5em
  text-shadow 1px 2px 2px #ddd
h2
  font-size 2em
input[type =submit]
  background #FFFFFF
  border-radius .5em
  color #5C2E00
  font-family sans, sans-serif
  padding .5em
input[type =text]
  margin-left 1em
  margin-bottom 1em
  width 10em
textarea
  border 1px solid #5C2E00
  border-radius 1em
  height 5em
  padding 1em
  width 50%
#articles
  margin-left auto
  margin-right auto
  text-align left
  width 50%
  .article
    margin 1.25em
    .body
      background-color #FFFFFF
      border-radius 0 0 1em 1em
      border 1px solid #5C2E00
      padding 1em
    .created_at
      display none
    .title
      background-color #FFB2B2
      border-radius 1em 1em 0 0
      border 1px solid #5C2E00
      border-bottom 0
      font-weight bold
      padding 1em
      a
        color #5C2E00
.post
  hr
    background-image -webkit-linear-gradient(left, rgba(0,0,0,0), rgba(92,46,0,0.75), rgba(0,0,0,0))
    background-image    -moz-linear-gradient(left, rgba(0,0,0,0), rgba(92,46,0,0.75), rgba(0,0,0,0))
    background-image     -ms-linear-gradient(left, rgba(0,0,0,0), rgba(92,46,0,0.75), rgba(0,0,0,0))
    background-image      -o-linear-gradient(left, rgba(0,0,0,0), rgba(92,46,0,0.75), rgba(0,0,0,0)) 
    border 0
    height 1px
    margin-bottom 2em
    margin-left auto
    margin-right auto
    margin-top 2em
    width 50%
  input[type =submit]
    float right
  .created_at
    display none
  .body
    margin-top 1em
    p
      background-color #FFFFFF
      border 1px solid #5C2E00
      border-radius 1em
      margin auto
      padding 1em
      width 50%
  .comment
    background #FFB2B2
    border-left 1px solid #5C2E00
    border-right 1px solid #5C2E00
    margin auto
    padding .5em
    width 50%
  .comment:first-child
    border-radius 1em 1em 0 0
    border-top 1px solid #5C2E00
  .comment:last-child
    border-bottom 1px solid #5C2E00
    border-radius 0 0 1em 1em
  .comment:nth-child(even)
    background #FFFFFF
  .comment.single-comment
    border-radius 1em
  #comment-author
    margin-top 1em
  #comment-content
    margin-bottom 0em
  #comment-list
    margin-top 1em
  #comment-submit
    margin auto
    width 50%
#edit-article-body
  height 15em
