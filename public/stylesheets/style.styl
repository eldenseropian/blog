body
  font-family "Helvetica Neue", "Lucida Grande", "Arial"
  font-size 1em
  text-align center
  color #555
h1, h2
  margin 0
  color #343434
h1
  text-shadow 1px 2px 2px #ddd
  font-size 5em
h2
  font-size 2em
#articles
  text-align left
  margin-left auto
  margin-right auto
  width 50%
  .article
    margin 1.25em
    .created_at
      display none
    .title
      font-weight bold
      background-color #eee
    .body
      background-color #ffa
.article
  .created_at
    display none
  .body
    p
      background-color #EEE
      border 1px solid black
      margin auto
      padding 1em
      width 50%
  #comment-author, #comment-content
    margin 1em
  #comments, #new-comment
    margin-top 1em
  input[type =text]
    width 10em
    margin-left 1em
  input[type =button], input[type =submit]
    text-align left
    margin-left 50%
  textarea
    height 5em
    padding 1em
    width 50%
